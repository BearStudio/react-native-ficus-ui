{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,
    "isolatedModules": true,
    "moduleResolution": "node10",
    "composite": true,
    "module": "ESNext",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react-native",
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "packages",
    "__tests__"
  ],
  "exclude": [
    "node_modules",
    "apps",
    "dist"
  ],
  "extends": "expo/tsconfig.base"
}
